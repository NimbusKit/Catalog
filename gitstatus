status_of_feature() {
  reponame=$1
  foldername=$(echo $1| tr '[:upper:]' '[:lower:]')
  featurefolder="features/$foldername"

  echo "Status of $reponame"
  git status $featurefolder
}

status_of_feature Actions
status_of_feature AttributedLabel
status_of_feature Badge
status_of_feature Core
status_of_feature SnapshotRotation
status_of_feature Tables

echo "Status of Catalog + Framework"
git status
